						} catch (Exception e) {
							System.out.println("Please Enter Integer value");
						}
						switch (option3) {
						case 1:
							Admin.viewOrders();
							break;
						case 2:
							Admin.viewAllProducts();
							break;
						case 3:
							Admin.getAllCustomer();
						case 4:
							Admin.getAllHaulier();
						case 5:
							Admin.addContract();
							break;
						case 6:
							Admin.viewContract();
							break;
						case 7:
							break;
